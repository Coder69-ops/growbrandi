rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Projects: Public read, Admin write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Services: Public read, Admin write
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Team: Public read, Admin write
    match /team/{memberId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Testimonials: Public read, Admin write
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // FAQs: Public read, Admin write
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Site Content: Public read, Admin write
    match /site-content/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Contact Messages: Public create, Admin read/delete
    match /messages/{messageId} {
      allow create: if true;
      allow read, delete, update: if isAuthenticated();
    }

    // Tasks: Authenticated only (Admin Dashboard)
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // Audit Logs: Admin read/write
    match /audit_logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    // Time Entries: Authenticated read/write
    match /time_entries/{entryId} {
      allow read, write: if isAuthenticated();
    }

    // Assets (Metadata for R2 files)
    match /assets/{assetId} {
      allow read, write: if isAuthenticated();
    }
    
    // Folders (Hierarchy for Asset Library)
    match /folders/{folderId} {
      allow read, write: if isAuthenticated();
    }

    // Bookings: Public create/read (for availability), Admin update/delete
    match /bookings/{bookingId} {
      allow create, read: if true;
      allow update, delete: if isAuthenticated();
    }

    // Pages (CMS Content): Public read, Admin write
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Analytics: Public write (for view counts), Admin read
    match /analytics/{docId} {
      allow read, write: if true; 
    }

    // Promotions: Public read, Admin write
    match /promotions/{promoId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Leads: Public create, Admin read/update
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }
  }
}
